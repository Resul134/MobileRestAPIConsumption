<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.restservicesimple.deleteActivity">



    <TextView
        android:id="@+id/titleDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete a reservation!"
        android:textSize="25dp"></TextView>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="reservation id - Doesn't offer feedback, but it works."
                android:id="@+id/deleteEditText"></EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:onClick="deleteReservation"
                android:text="Delete a reservation"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/BackButtonDelete"
                android:onClick="goBack"
                ></Button>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
